<%- include ../components/header.ejs %>

    <%- include ../components/main_nav.ejs %>


        <!--Content for the Add page-->
        <div class="container">
            <div class="custom_div">

                    <div class="jumbotron">
                            <h1>
                        <%=title%>
                            </h1>
                     </div>

                <div class="row">
                <div class="offset-md-2 col-md-8">

                    <form class="form" method="POST">
                        <div class="form-group">
                            <label for="nameTextField">Name: </label><input id="nameTextField" placeholder="Name" name="name" type="text" class="form-control" required>
                        </div>

                        <div class="form-group">
                            <label for="numberField">Contact Number: </label><input id="numberField" placeholder="+1-000-000" name="number" type="tel" class="form-control">
                        </div>

                        <div class="form-group">
                            <label for="emailTextField">Email: </label><input id="emailTextField" placeholder="Email address" name="email" type="text" class="form-control">
                        </div>

                        <button class="btn btn-primary" >
                        <i class="fas fa-edit">Submit</i>
                        </button>

                        <a href="/contact-list" class="btn btn-warning">
                        <i class="fas fa-undo">Cancel</i>
                        </a>

                    </form>
                    </div>
                </div>
            </div>
        </div>

        <%- include ../components/bottom_nav.ejs %>

            <%- include ../components/footer.ejs %>